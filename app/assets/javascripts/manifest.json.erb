<% icon_sizes = Rails.configuration.serviceworker.icon_sizes %>
{
  "name": "Andmorefine App",
  "short_name": "andmorefine",
  "start_url": "/",
  "icons": [
  <% icon_sizes.map { |s| "#{s}x#{s}" }.each.with_index do |dim, i| %>
    {
      "src": "https://d2y9vn9mruehfd.cloudfront.net/img/favicons/icon-<%= dim %>.png",
      "sizes": "<%= dim %>",
      "type": "image/png"
    }<%= i == (icon_sizes.length - 1) ? '' : ',' %>
  <% end %>
  ],
  "theme_color": "#5f52a0",
  "background_color": "#ffffff",
  "display": "fullscreen",
  "orientation": "portrait"
}
