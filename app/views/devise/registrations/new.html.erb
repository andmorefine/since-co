<div class="container-fluid">
  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :name, "名前" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :email, "Email" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: "required" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上のパスワードを設定してください)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: "required" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード確認" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: "required" %>
    </div>

    <div class="actions mt-3 row">
      <div class="col">
        <%= f.submit "登録", class: "btn btn-primary" %>
      </div>
      <%# <div class="col"> %>
        <%# <%= render "devise/shared/links" %>
      <%# </div> %>
    </div>

  <% end %>

</div>
