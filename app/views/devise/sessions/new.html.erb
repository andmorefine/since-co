<div class="container-fluid">
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :name, "名前" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: "required" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: "required" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "パスワードを記録する" %>
      </div>
    <% end -%>

    <div class="actions mt-3 row">
      <div class="col">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
      <div class="col">
        <%= render "devise/shared/links" %>
      </div>
    </div>

  <% end %>

</div>
